pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/lokeshreddy1614/Blog-App-Deployment.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t blog-app:latest .'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    withDockerRegistry([credentialsId: 'docker-hub-credentials', url: '']) {
                        sh 'docker tag blog-app:latest lokeshreddy1614/blog-app:latest'
                        sh 'docker push lokeshreddy1614/blog-app:latest'
                    }
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    sh 'docker stop blog-app || true'
                    sh 'docker rm blog-app || true'
                    sh 'docker run -d -p 3000:3000 --name blog-app lokeshreddy1614/blog-app:latest'
                }
            }
        }
    }
}

